# AWS Configuration
COPILOT_AWS_REGION=us-east-1
# COPILOT_AWS_PROFILE=default

# Detection Thresholds
COPILOT_EC2_CPU_THRESHOLD=95.0
COPILOT_EC2_CPU_DURATION_MINUTES=10
COPILOT_LAMBDA_ERROR_THRESHOLD=5
COPILOT_LAMBDA_TIMEOUT_THRESHOLD_MS=25000
COPILOT_BEDROCK_TOKEN_THRESHOLD=100000
COPILOT_BEDROCK_TOKEN_WINDOW_MINUTES=60
COPILOT_DYNAMODB_THROTTLE_THRESHOLD=10
COPILOT_RDS_CONNECTION_THRESHOLD=90

# Monitoring Configuration
COPILOT_LOOKBACK_MINUTES=60
COPILOT_POLL_INTERVAL_SECONDS=300

# Alerting Configuration
COPILOT_ENABLE_ALERTING=false
# COPILOT_SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:incident-alerts
# COPILOT_ALERT_EMAIL=alerts@example.com

# Evidence Configuration
COPILOT_EVIDENCE_OUTPUT_DIR=./evidence
COPILOT_MAX_EVIDENCE_AGE_DAYS=30
