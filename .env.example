# NextAuth Configuration (Required for user authentication)
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET=your_random_secret_here_generate_with_openssl_rand_base64_32
NEXTAUTH_URL=http://localhost:3000

# AWS Configuration (OPTIONAL - Legacy/Fallback Only)
# NOTE: Users now configure their AWS credentials through the Settings page
# These environment variables are only used as fallback if no user credentials are provided
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1

# Optional: AWS Profile (for local CLI use only, not used in Vercel)
# COPILOT_AWS_PROFILE=default
COPILOT_AWS_REGION=us-east-1

# Detection Thresholds
COPILOT_EC2_CPU_THRESHOLD=95.0
COPILOT_EC2_CPU_DURATION_MINUTES=10
COPILOT_LAMBDA_ERROR_THRESHOLD=5
COPILOT_LAMBDA_TIMEOUT_THRESHOLD_MS=25000
COPILOT_BEDROCK_TOKEN_THRESHOLD=100000
COPILOT_BEDROCK_TOKEN_WINDOW_MINUTES=60
COPILOT_DYNAMODB_THROTTLE_THRESHOLD=10
COPILOT_RDS_CONNECTION_THRESHOLD=90

# Monitoring Configuration
COPILOT_LOOKBACK_MINUTES=60
COPILOT_POLL_INTERVAL_SECONDS=300

# Alerting Configuration
COPILOT_ENABLE_ALERTING=false
# COPILOT_SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:incident-alerts
# COPILOT_ALERT_EMAIL=alerts@example.com

# Evidence Configuration
COPILOT_EVIDENCE_OUTPUT_DIR=./evidence
COPILOT_MAX_EVIDENCE_AGE_DAYS=30

# For Vercel deployment, use /tmp for evidence storage:
# COPILOT_EVIDENCE_OUTPUT_DIR=/tmp/evidence
